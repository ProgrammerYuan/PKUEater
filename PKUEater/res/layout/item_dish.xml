<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent">
	<LinearLayout
			android:id="@+id/item_dish_main"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:background="@drawable/selector_round_rect_solid_white"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:padding="8dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="4dp">
		<com.makeramen.RoundedImageView
				android:id="@+id/item_dish_image"
				android:layout_width="80dp"
				android:layout_height="80dp"
				android:scaleType="centerCrop"
				android:src="@drawable/nongyuan"
				app:oval="true"
				app:border_width="0dp"/>
		<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="8dp"
				android:padding="4dp"
				android:orientation="vertical">
			<TextView
					android:id="@+id/item_dish_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text=""
					android:textSize="16sp"
					android:textColor="@color/main_2"/>
			<TextView
					android:id="@+id/item_dish_intro"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="我是全北大最大但最挤的食堂，二层比一层的饭好吃多了，但是一层人少,所以我也不知道我在写些神马"
					android:maxLines="2"
					android:ellipsize="end"/>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>